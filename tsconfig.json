{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"],
      "@/lib/*": ["src/lib/*"],
      "@/styles/*": ["src/styles/*"],
      "@/meta/*": ["src/meta/*"],
      "@/*": ["src/*"],
      "~/*": ["./*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/typings/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".eslintrc.js"
  ]
}
